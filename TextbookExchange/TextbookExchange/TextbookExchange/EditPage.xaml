<?xml version="1.0" encoding="UTF-8"?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TextbookExchange.EditPage">
    <ContentPage Title="Add Book" >
        <ScrollView VerticalOptions="StartAndExpand">
            <StackLayout Margin="20">
                <Label Text="Title" 
                       TextColor="Black"
                       HorizontalOptions="Center" 
                       VerticalOptions="CenterAndExpand"/>
                    
                <Entry x:Name="titleEntry"
                       Text="title"
                       TextColor="Gray"
                       HorizontalTextAlignment="Center">
                    <Entry.Keyboard>
                        <Keyboard x:FactoryMethod="Create">
                            <x:Arguments>
                                <KeyboardFlags>Suggestions,CapitalizeCharacter</KeyboardFlags>
                            </x:Arguments>
                        </Keyboard>
                    </Entry.Keyboard>
                </Entry>
                    
                <Label Text="Author"
                       TextColor="Black"
                       HorizontalOptions="CenterAndExpand" 
                       VerticalOptions="CenterAndExpand"/>
                <Entry x:Name="authorEntry"
                       Text="author"
                       TextColor="Gray"
                       HorizontalTextAlignment="Center">
                    <Entry.Keyboard>
                        <Keyboard x:FactoryMethod="Create">
                            <x:Arguments>
                                <KeyboardFlags>Suggestions,CapitalizeCharacter</KeyboardFlags>
                            </x:Arguments>
                        </Keyboard>
                    </Entry.Keyboard>
                </Entry>
                
                <Label Text="Year Published"
                       TextColor="Black"
                       HorizontalOptions="Center" 
                       VerticalOptions="CenterAndExpand"/>
                <Entry x:Name="yearEntry"
                       Text="year"
                       TextColor="Gray"
                       HorizontalTextAlignment="Center">
                    <Entry.Keyboard>
                        <Keyboard x:FactoryMethod="Create">
                            <x:Arguments>
                                <KeyboardFlags>Suggestions,CapitalizeCharacter</KeyboardFlags>
                            </x:Arguments>
                        </Keyboard>
                    </Entry.Keyboard>
                </Entry>
                <Button Text="Add" HorizontalOptions="Center" 
                        VerticalOptions="CenterAndExpand" 
                        Clicked="OnAddBookButtonClicked" />
                
                
            </StackLayout>
        </ScrollView>
    </ContentPage>
    
    <ContentPage Title="Update Book" >
        <StackLayout>
            <Label HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />
            <Button Text="Update" HorizontalOptions="Center" VerticalOptions="Center"
                    Clicked="OnUpdateBookButtonClicked"/>
            <ListView x:Name="bookListings">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Label Text="{Binding Title}"/>
                                <Button Text="View" HorizontalOptions="EndAndExpand"
                                        Clicked="OnListingClicked"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage>
    <ContentPage Title="Delete Book" >
        <ScrollView VerticalOptions="StartAndExpand">
            <StackLayout Margin="20">
                <Label Text="Title" 
                       TextColor="Black"
                       HorizontalOptions="Center" 
                       VerticalOptions="CenterAndExpand"/>
                    
                <Entry x:Name="titleEntry"
                       Text="title"
                       TextColor="Gray"
                       HorizontalTextAlignment="Center">
                    <Entry.Keyboard>
                        <Keyboard x:FactoryMethod="Create">
                            <x:Arguments>
                                <KeyboardFlags>Suggestions,CapitalizeCharacter</KeyboardFlags>
                            </x:Arguments>
                        </Keyboard>
                    </Entry.Keyboard>
                </Entry>
                    
                <Label Text="Author"
                       TextColor="Black"
                       HorizontalOptions="CenterAndExpand" 
                       VerticalOptions="CenterAndExpand"/>
                <Entry x:Name="authorEntry"
                       Text="author"
                       TextColor="Gray"
                       HorizontalTextAlignment="Center">
                    <Entry.Keyboard>
                        <Keyboard x:FactoryMethod="Create">
                            <x:Arguments>
                                <KeyboardFlags>Suggestions,CapitalizeCharacter</KeyboardFlags>
                            </x:Arguments>
                        </Keyboard>
                    </Entry.Keyboard>
                </Entry>
                
                <Label Text="Year Published"
                       TextColor="Black"
                       HorizontalOptions="Center" 
                       VerticalOptions="CenterAndExpand"/>
                <Entry x:Name="yearEntry"
                       Text="year"
                       TextColor="Gray"
                       HorizontalTextAlignment="Center">
                    <Entry.Keyboard>
                        <Keyboard x:FactoryMethod="Create">
                            <x:Arguments>
                                <KeyboardFlags>Suggestions,CapitalizeCharacter</KeyboardFlags>
                            </x:Arguments>
                        </Keyboard>
                    </Entry.Keyboard>
                </Entry>
                <Button Text="Delete" HorizontalOptions="Center" 
                        VerticalOptions="CenterAndExpand" 
                        Clicked="OnDeleteBookButtonClicked" />
            </StackLayout>
        </ScrollView>
    </ContentPage>
</TabbedPage>
